---
import Seccion from "./Seccion.astro";
import { habilidades } from "@cv";

import HTML from "@/icons/html.astro";
import CSS from "@/icons/css.astro";
import JavaScript from "@/icons/javascript.astro";
import React from "@/icons/react.astro";
import MySQL from "@/icons/sql.astro";
import Git from "@/icons/git.astro";
import GitHub from "@/icons/GitHub.astro";
import Bootstrap from "@/icons/bootstrap.astro";
import Java from "@/icons/java.astro";

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  Bootstrap,
  Java,
  MySQL,
  Git,
  GitHub,
  React,
};
---

<Seccion titulo="Habilidades">
  <ul>
    {
      habilidades.map(({ nombre }) => {
        const Icon = SKILLS_ICONS[nombre];

        return (
          <li>
            {Icon && <Icon />} <span>{nombre}</span>
          </li>
        );
      })
    }
  </ul>
</Seccion>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    display: flex;
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
